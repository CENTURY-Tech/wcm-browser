{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es2016.array.include",
      "es2015.promise"
    ],
    "typeRoots": [
      "typings/index.d.ts"
    ],
    "noImplicitAny": true,
    "removeComments": true,
    "experimentalDecorators": true
  },
  "include": [
    "source/**/*"
  ],
  "exclude": [
    "node_modules",
    "bower_components"
  ]
}