{
  "compilerOptions": {
    "rootDir": "./src",
    "outFile": "./dist/wcm.js",
    "module": "amd",
    "target": "es5",
    "declaration": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": [
    "./src"
  ]
}
